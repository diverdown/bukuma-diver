doctype html
html
  head
    title ブクマダイバー
    script(src="/js/main.js")
    link(rel="shortcut icon" href="/image/favicon.png" type="image/png")
    link(rel="stylesheet", href="/css/main.css")
    link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(charset="UTF-8")
  body#app(v-class="modal-open: isModalOpen" v-on="keyup: closeModal | key esc")
    #modal(v-component="modal" v-show="isModalOpen" v-events="closeModal: closeModal")

    .top-align-flexbox(v-style="min-height: sidebarHeight")
      #sidebar-wrapper
        nav#sidebar(v-component="sidebar")
      main#main(v-component="{{currentView}}" v-ref="main")

    #footer(v-html="footerContent")
